                        android:layout_gravity="center"
                        app:idleIconDrawable="@drawable/icons_pump_filled_72_idle"
                        app:finishIconDrawable="@drawable/icons_pump_filled_72_white"
                        />
                </FrameLayout>
            </TableRow>
