                        android:layout_height="72dp"
                        android:layout_gravity="center"
                        app:idleIconDrawable="@drawable/icon_farm_idle"
                        app:finishIconDrawable="@drawable/icon_farm_finish"
                        />
                </FrameLayout>
                <FrameLayout
