    <LinearLayout
        android:id="@+id/layout_main_control"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/layout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/farm_picture"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="12dp">
                <TextView
                    android:id="@+id/farm_title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/farm_title"
                    android:textSize="@dimen/large_font_size"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/superspace_regular"/>
                <ImageView
                    android:id="@+id/imageview_farm_alert"
                    android:visibility="invisible"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="center"
                    android:layout_toRightOf="@id/farm_title"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/animated_alarm"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/imageview_farm_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="12dp"
                android:clickable="true"
                android:src="@drawable/ic_home_black_24dp"
                android:tint="@color/white"
                />
            <TextView
                android:id="@+id/farm_description"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/layout_title"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="12dp"
                android:text="@string/farm_description"
                android:textSize="@dimen/normal_font_size"
                android:textColor="@color/white"
                android:fontFamily="@font/superspace_regular"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_below="@id/farm_description"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/imageView_rainSensor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icons_rain_filled_36_black"
                    android:tint="@color/white"
                    />
                <TextView
                    android:id="@+id/textview_rain_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/imageView_rainSensor"
                    android:text="@string/rain_status"
                    android:textSize="@dimen/medium_font_size"
                    android:textColor="@color/white"
                    android:fontFamily="@font/superspace_regular"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_below="@id/farm_description"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/imageView_today_watering"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_today_schedule_36_black"
                    android:tint="@color/white"
                    />
